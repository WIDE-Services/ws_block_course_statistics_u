@template block_event_management/measuresinquizzes/usersmain
@description This template displays user-specific statistics for quiz performance within courses.
It expects the following context data:
- access: Boolean indicating if the user has permission to access this page.
- usersdata: Array containing statistics for each user related to a specific quiz, with each element including:
  - lastname: The last name of the user.
  - firstname: The first name of the user.
  - course: The name of the course.
  - quiz: The name of the quiz.
  - totaltime: Formatted total time spent by the user on the quiz.
  - numtotaltime: Numeric total time for sorting.
  - attempts: The number of attempts made by the user.
  - viewquiz: URL for viewing detailed quiz attempts.
  - cmid: The course module ID of the quiz.
  - attempt: The specific attempt number.
  - avgscore: The average score of the user's attempts.
- bcmbcourses: URL for the breadcrumb link back to the courses overview.
- bcmbquizzes: URL for the breadcrumb link back to the quizzes overview.
- paramcourseid: The course ID used for navigation.
- current_lang: The current language code used for localization.
- js: Boolean indicating if JavaScript should be included for DataTable functionality.
}}

{{#access}}
    <div class="page-wrapper">

        <!-- PAGE CONTENT-->
        <div class="page-content--bgf7">

            <!-- STATISTIC MENU-->
            {{> block_course_statistics/admin/common/navsection }}
            <!-- END STATISTIC MENU -->

            <!-- Filter Table Form -->
            {{> block_course_statistics/admin/common/formsection }}
            <!-- END Filter Table Form -->

            <!-- DATA TABLE-->
            <section class="p-t-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="title-5 m-b-35">{{#str}}measuresinquizzes, block_course_statistics{{/str}}</h3>

                            <!-- Breadcrumb -->
                            <nav>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{bcmbcourses}}">{{#str}}courses, block_course_statistics{{/str}}</a></li>
                                    <li class="breadcrumb-item"><a href="{{bcmbquizzes}}&courseid={{paramcourseid}}">{{#str}}quizzes, block_course_statistics{{/str}}</a></li>
                                    <li class="breadcrumb-item"><a href="#">{{#str}}users, block_course_statistics{{/str}}</a></li>
                                </ol>
                            </nav>
                            <!-- END Breadcrumb -->

                            <div class="table-responsive table-responsive-data2">
                                <br>
                                <table class="statistics display table table-data2" cellspacing="0" width="100%">
                                    <thead>

                                    <tr>

                                        <th></th>

                                        <th>{{#str}}lastname{{/str}}</th>
                                        <th>{{#str}}firstname{{/str}}</th>
                                        <th>{{#str}}course{{/str}}</th>
                                        <th>{{#str}}quiz, block_course_statistics{{/str}}</th>
                                        <th>{{#str}}totaltime, block_course_statistics{{/str}}</th>
                                        <th>{{#str}}attempts, block_course_statistics{{/str}}</th>
                                        <th>{{#str}}avgscore, block_course_statistics{{/str}}</th>
                                        <!--<th>{{#str}}skip, block_course_statistics{{/str}}</th>-->
                                    </tr>

                                    </thead>

                                    <tbody>

                                    {{#usersdata}}

                                        <tr class="tr-shadow">

                                            <td></td>

                                            <td>{{lastname}}</td>
                                            <td>{{firstname}}</td>
                                            <td>{{course}}</td>
                                            <td>{{quiz}}</td>
                                            <td data-order="{{numtotaltime}}"><span class="hidden-span"> {{numtotaltime}} </span>{{totaltime}} </td>
                                            <td><a href="{{{viewquiz}}}?attempt={{attempt}}&cmid={{cmid}}" target = "_blank">{{attempts}}</a></td>
                                            <td>{{avgscore}}</td>

                                        </tr>

                                    {{/usersdata}}

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END DATA TABLE-->

        </div>

    </div>
{{/access}}
{{^access}}
    <div class="container">
        <div class="jumbotron bg-danger">
            <h1>{{#str}}accessdenied, block_course_statistics{{/str}}</h1>
        </div>

    </div>
{{/access}}
<!-- end document-->

{{#js}}

    var tableconfig = {
    order: [
    [5, 'desc']
    ]
    };

    // Get the current language from Moodle's global configuration.
    var lang = '{{current_lang}}';

    // Check if the language is not the English one ('en').
    if (lang !== 'en') {
    // Remove anything after '_' and remove '_' itself if 'el_wp' is found.
    var langToLoad = lang.indexOf('_wp') !== -1 ? lang.substring(0, lang.indexOf('_wp')).replace('_', '') : lang;

    // If the language is any other language, set the language option for DataTable.
    tableconfig.language = {
    url: M.cfg.wwwroot + '/blocks/course_statistics/lang/' + langToLoad + '/' + langToLoad + '.json'
    };
    }

    require(
    ['block_course_statistics/datatables_init-lazy',
    'block_course_statistics/jszip-lazy',
    'block_course_statistics/pause_measure-lazy'
    ], function(dataTableModule, Jszip, Main) {
    dataTableModule.initializeDataTable(tableconfig);
    window.JSZip = Jszip;
    Main.pausemeasure();
    });

{{/js}}